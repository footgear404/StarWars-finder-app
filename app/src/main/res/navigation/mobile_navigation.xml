<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.semenchuk.starwars_finder_app.presentation.search.SearchFragment"
        android:label="@string/title_search_screen"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_favoriteFragment"
            app:destination="@id/navigation_favorite" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.semenchuk.starwars_finder_app.presentation.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
</navigation>