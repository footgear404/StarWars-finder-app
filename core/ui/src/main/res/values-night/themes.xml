<resources>
    <!-- Base application theme. -->
    <style name="Base.v24.Night.Theme.StarWars" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryVariant">@color/night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sun</item>
        <item name="colorSecondaryVariant">@color/sun</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:editTextColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:buttonStyle">@style/Widget.StarWars.Button</item>
    </style>

    <style name="Base.Theme.StarWars" parent="Base.v24.Night.Theme.StarWars">

    </style>
</resources>