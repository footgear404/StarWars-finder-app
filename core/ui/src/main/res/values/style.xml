<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.StarWars.Button" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.StarWars.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/coral</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">25dp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.Material3.SearchView">
        <item name="android:iconifiedByDefault">true</item>
        <item name="android:queryHint">test</item>
        <item name="android:searchIcon">@drawable/outline_search</item>
        <item name="android:closeIcon">@drawable/close</item>
        <item name="android:textColorHint">@color/sun</item>
    </style>

</resources>